@model SalamiTV.Models.Contact

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <form class="form-horizontal" action="mailto:anbj1001@student.miun.se" method="get">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject)
            @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Message)
            @Html.EditorFor(m => m.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-default">Skicka</button>
    </form>

}

