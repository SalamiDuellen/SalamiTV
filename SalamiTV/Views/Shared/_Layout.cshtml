<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SeeSharpTV</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <!-- för autocompletefunktionen -->
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
          crossorigin="anonymous">

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="~/Scripts/Resources.js"></script>

    <link rel="stylesheet" href="~/content/Site.css" />
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @*nya navigeringen*@
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">SeeSharpTV</a>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Visa alla kanaler", "Index", "Home", new { showAll = true }, null)</li>
                    <li>@Html.ActionLink("Visa mina kanaler", "Index", "Home", new { showAll = false }, null)</li>
                    <li>@Html.ActionLink("Om oss", "About", "Home")</li>
                    @*<li><a href="/Home/Contact">Kontakta oss</a></li>*@
                </ul>
                <form class="navbar-form navbar-left" autocomplete="off" id="topnavsearch" action="/action_page.php">
                    <div class="input-group">
                        <input id="inputautocomplete" type="text" class="form-control" placeholder="Sök..." name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">

                    @*kommer direkt till loginsindan*@
                    @if (!Context.User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="~/Account/Login">
                                Logga in
                                <span class="glyphicon glyphicon-log-in"></span>
                            </a>
                        </li>
                    }
                    @*lägga till isinrole för admin och länka till adminsida*@
                    else if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("Admin"))
                    {
                        //Lägga id för den inloggade och skicka in den till index så att man kan söka på antingen id eller alla
                        <li>  @Html.ActionLink("Logga ut", "LogOff", "Account")</li>
                        <li>  @Html.ActionLink("Adminsida", "Index", "Admin")</li>
                        <li><a href="~/UserTablau/Index"><span class="glyphicon glyphicon-home"></span></a></li>

                        @*<li><a href="~/Account/LogOff"><span class="glyphicon glyphicon-home"></span></a></li>*@
                    }
                    else
                    {
                        <li>  @Html.ActionLink("Logga ut", "LogOff", "Account")</li>
                        <li><a href="~/UserTablau/Index"><span class="glyphicon glyphicon-home"></span></a></li>

                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="container-fluid text-center">
        @*<p>Mail: <a href="mailto:anbj1001@student.miun.se">Annica Alienus</a></p><br />*@

        <a href="/Home/About"> Om oss </a><br />
        <a href="mailto:anbj1001@student.miun.se">Skicka e-mail </a>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Resources.js"></script>
</body>
</html>
